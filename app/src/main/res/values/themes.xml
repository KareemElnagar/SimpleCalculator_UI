<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BK_course" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <style name="Theme.BK_course" parent="Base.Theme.BK_course" />

    <style name="circle">
        <item name="cornerSize">40dp</item>
    </style>

    <style name="calculatorButton">
        <item name="android:textSize">@dimen/textButton</item>
    </style>

    <style name="calculatorButton.Number">
        <item name="android:background">@drawable/circle_button_white</item>
        <item name="android:textSize">@dimen/textButton</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="calculatorButton.Operations">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textSize">@dimen/textButton</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="calculatorButton.Result">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textSize">@dimen/textButton</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>